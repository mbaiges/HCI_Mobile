<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/background1</item>>
        <item name="colorAccent">@color/accent</item>

        <item name="android:statusBarColor">@color/primary2</item>
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DrawerHeaderBar">
        <item name="background">@color/background1</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/icon</item>
        <item name="android:actionMenuTextColor">@color/icon</item>
        <item name="color">@color/icon</item>
        <item name="background">@color/background1</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>